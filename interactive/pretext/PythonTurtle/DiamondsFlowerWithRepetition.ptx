            <c>leo = turtle.Turtle()</c>
          </cell>
          <cell>
            <c>leo.forward(???)</c>
          </cell>
        </row>
        <row>
          <cell>
            <c>leo.left(???)</c>
          </cell>
          <cell>
            <c>leo.right(???)</c> 
          </cell>
          <cell>
            <c>for _ in range(???):</c> 
          </cell>
        </row>
      </tabular>
    </p>
  </sidebyside>

  <program xml:id="ch03_7_diamonds_flower_with_repetition" interactive="activecode" language="python">
    <input>
    import turtle

    leo = turtle.Turtle()

    for _ in range(2):
        leo.forward(60)
        leo.left(30)
        leo.forward(60)
        leo.left(150)
    </input>
  </program>
</section>
