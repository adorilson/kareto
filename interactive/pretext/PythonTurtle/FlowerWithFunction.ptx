  <program xml:id="ch03_9_flower" interactive="activecode" language="python">
    <input>
    # Configuração do estado inicial do ambiente
    import sys
    sys.setExecutionLimit(100*1000)

    import turtle
    screen = turtle.Screen()
    screen.setup(width=800)

    leo = turtle.Turtle()
    leo.penup()
    leo.setx(-250)
    leo.pendown()

    # Definindo a função
    def desenhe_uma_flor():
        for _ in range(6):
            for _ in range(8):
                leo.forward(20)
                leo.right(30)
            leo.right(60)

    # Chamando a função (apenas na chamada que a função é executada)
    desenhe_uma_flor()

    # Reposicionando a tartaruga
    leo.penup()
    leo.forward(200)
    leo.pendown()

    # Chamando a função novamente e desenhando outra flor
    desenhe_uma_flor()

    # Escreva o código necessário para desenhar a terceira flor a partir daqui
    # Não esqueça de reposicionar a tartaruga
    </input>  
  </program>

