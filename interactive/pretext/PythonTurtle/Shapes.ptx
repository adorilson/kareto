  <program xml:id="ch03_9_shapes" interactive="activecode" language="python">
    <input>
    # Configuração do estado inicial do ambiente
    import sys
    sys.setExecutionLimit(200*1000)

    import turtle
    screen = turtle.Screen()
    screen.setup(width=700, height=500)

    leo = turtle.Turtle()
    leo.penup()
    leo.setx(-250)
    leo.sety(-150)
    leo.pendown()

    # definindo as funções
    def desenhe_forma():
        for _ in range(6):
            leo.forward(25)
            leo.right(60)

    def pule(pixels):
        leo.penup()
        leo.forward(pixels)
        leo.pendown()


    # Aqui é o código principal
    for _ in range(6):
        for _ in range(2):
            for _ in range(4):
                desenhe_forma()
                pule(75)
            pule(-25)
            leo.right(60)
            pule(25)
            leo.right(120)
        pule(-25)
        leo.left(60)
        pule(50)
        leo.right(60)

    </input>  
  </program>

